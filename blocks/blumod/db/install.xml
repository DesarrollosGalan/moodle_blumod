<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/blumod/db" VERSION="20220125" COMMENT="XMLDB file for Moodle BLU"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_blu" COMMENT="Info de las BLU existentes">
      <FIELDS>
        <FIELD NAME="id"        TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="description"      TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course"    TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_blusub" COMMENT="Info de las BLU SUB">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="id_blu" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="id_sub" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary"   TYPE="primary" FIELDS="id"/>
        <KEY NAME="ix_id_blu" TYPE="foreign" FIELDS="id_blu" REFTABLE="block_blu" REFFIELDS="id"/>        
        <KEY NAME="ix_id_sub" TYPE="foreign" FIELDS="id_sub" REFTABLE="block_blu" REFFIELDS="id"/>
      </KEYS>
    </TABLE>    
    <TABLE NAME="block_blupre" COMMENT="Info de las BLU PRE">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="id_blu" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="id_pre" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary"   TYPE="primary" FIELDS="id"/>
        <KEY NAME="ix_id_blu" TYPE="foreign" FIELDS="id_blu" REFTABLE="block_blu" REFFIELDS="id"/>        
        <KEY NAME="ix_id_pre" TYPE="foreign" FIELDS="id_pre" REFTABLE="block_blu" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_blumod" COMMENT="BLU asociada a modulo">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="module" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="blu"    TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary"   TYPE="primary" FIELDS="id"/>
        <KEY NAME="ix_module" TYPE="foreign" FIELDS="module" REFTABLE="modules" REFFIELDS="id"/>
        <KEY NAME="ix_blu   " TYPE="foreign" FIELDS="blu"    REFTABLE="blu"     REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="block_blucompetency" COMMENT="Comptencias asociadas a BLU">
      <FIELDS>
        <FIELD NAME="id"           TYPE="int" LENGTH="19" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="competencyid" TYPE="int" LENGTH="19" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="bluid"        TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary"       TYPE="primary" FIELDS="id"/>
        <KEY NAME="ix_competency" TYPE="foreign" FIELDS="competencyid" REFTABLE="competency" REFFIELDS="id"/>
        <KEY NAME="ix_blu"        TYPE="foreign" FIELDS="bluid"        REFTABLE="blu"        REFFIELDS="id"/>
      </KEYS>
    </TABLE>  
  </TABLES>
</XMLDB>